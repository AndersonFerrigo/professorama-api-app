<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".br.com.clearsys.professorama.professor.CronometroAulaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/colorBotaoCadastrar"
        android:text="@string/cronometro_fragment" />

    <Chronometer
        android:id="@+id/aulaCronometro"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:textSize="80dp"
        android:textColor="@color/colorBotaoCadastrar"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/iniciarAula"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="230dp"
            android:background="@drawable/custom_buttons"
            android:elevation="2dp"
            android:textColor="@color/colorBotaoCadastrar"
            android:gravity="center"
            android:text="Iniciar contagem">

        </Button>

        <Button
            android:id="@+id/pausarAula"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="160dp"
            android:background="@drawable/custom_buttons"
            android:elevation="2dp"
            android:textColor="@color/colorBotaoCadastrar"
            android:text="Pausar contagem"></Button>

        <Button
            android:id="@+id/zerarAula"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/custom_buttons"
            android:elevation="2dp"
            android:textColor="@color/colorBotaoCadastrar"
            android:text="Zerar contagem">

        </Button>
    </RelativeLayout>
</FrameLayout>