<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_background_login"
    tools:context=".br.com.clearsys.professorama.br.com.clearsys.professorama.aluno.AlunoHomeActivity">

    <FrameLayout
        android:id="@+id/containerForFragmentAluno"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorIndigo400Background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation_aluno_menu"
        >


    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>