<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameDesNovaTarefa"
    android:background="@drawable/background_professorama"
    tools:context=".novaAtividade.DescricaoNovaAtividadeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/tituloFrag"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:hint="Atividade"
            android:textSize="20dp"
            android:textColor="@color/colorBotaoCadastrar"
            android:textColorHint="@color/colorBotaoCadastrar" />

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:foregroundTint="@color/colorBotaoCadastrar"
            android:textColorHint="@color/colorBotaoCadastrar"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorBotaoCadastrar">

            <EditText
                android:id="@+id/recebe_data_entrega_atual"
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginTop="50dp"
                android:hint="@string/data_entrega"
                android:textSize="20dp"
                android:textColor="@color/colorBotaoCadastrar"
                android:textColorHint="@color/colorBotaoCadastrar"
                android:backgroundTint="@color/colorBotaoCadastrar"
                android:textCursorDrawable="@drawable/my_cursor" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_materias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textColor="@color/colorBotaoCadastrar"
            android:backgroundTint="@color/colorBotaoCadastrar"
            android:popupBackground="@drawable/background_professorama">
        </Spinner>

        <Spinner
            android:id="@+id/spinner_salas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textColor="@color/colorBotaoCadastrar"
            android:backgroundTint="@color/colorBotaoCadastrar"
            android:popupBackground="@drawable/background_professorama">
        </Spinner>

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:foregroundTint="@color/colorBotaoCadastrar"
            android:textColorHint="@color/colorBotaoCadastrar"
            app:passwordToggleTint="@color/colorBotaoCadastrar">

            <EditText
                android:id="@+id/recebe_descricao_atual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBotaoCadastrar"
                android:hint="@string/descricao"
                android:lines="8"
                android:textColor="@color/colorBotaoCadastrar"
                android:textColorHint="@color/colorBotaoCadastrar"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="20dp" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_atualiza_atividade"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="480sp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:text="@string/btnIncluirAtividade"
            android:textColor="@color/colorBotaoCadastrar" />

        <Button
            android:id="@+id/btn_cancela_atual_atividade"
            android:layout_width="100sp"
            android:layout_height="60dp"
            android:layout_marginTop="480sp"
            android:layout_marginStart="220sp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:text="@string/btnCancelaAtividade"
            android:textColor="@color/colorBotaoCadastrar" />
    </RelativeLayout>

</FrameLayout>