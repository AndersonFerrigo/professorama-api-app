<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_atualiza_aluno"
    android:background="@drawable/background_professorama"
    android:orientation="vertical"
    tools:context=".novoAluno.CadastroNovoAluno">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:text="@string/informacaoTelaAtualiza"
        android:textColor="@color/colorBotaoCadastrar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/recebe_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="15sp"
            android:hint="@string/recebeIdAluno"
            android:textColorHint="@color/colorBotaoCadastrar"
            android:textColor="@color/colorBotaoCadastrar"
            android:textSize="20sp"
            android:backgroundTint="@color/colorBotaoCadastrar"
            android:textCursorDrawable="@drawable/my_cursor" />

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:foregroundTint="@color/colorBotaoCadastrar"
            android:textColorHint="@color/colorBotaoCadastrar">

            <EditText
                android:id="@+id/recebe_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:textColor="@color/colorBotaoCadastrar"
                android:hint="@string/nomeAluno"
                android:textColorHint="@color/colorBotaoCadastrar"
                android:backgroundTint="@color/colorBotaoCadastrar"
                android:textCursorDrawable="@drawable/my_cursor" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_salas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorBotaoCadastrar"
            android:backgroundTint="@color/colorBotaoCadastrar"
            android:popupBackground="@drawable/background_professorama">

        </Spinner>

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:foregroundTint="@color/colorBotaoCadastrar"
            android:textColorHint="@color/colorBotaoCadastrar">


            <EditText
                android:id="@+id/recebe_ra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:textColor="@color/colorBotaoCadastrar"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:hint="@string/perfilAluno"
                android:textColorHint="@color/colorBotaoCadastrar"
                android:backgroundTint="@color/colorBotaoCadastrar"
                android:textCursorDrawable="@drawable/my_cursor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:foregroundTint="@color/colorBotaoCadastrar"
            android:textColorHint="@color/colorBotaoCadastrar">

            <EditText
                android:id="@+id/recebe_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:inputType="textPersonName"
                android:textColor="@color/colorBotaoCadastrar"
                android:textSize="20sp"
                android:hint="@string/userAluno"
                android:textColorHint="@color/colorBotaoCadastrar"
                android:backgroundTint="@color/colorBotaoCadastrar"
                android:textCursorDrawable="@drawable/my_cursor" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:theme="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:gravity="center"
            app:passwordToggleEnabled="true"
            android:foregroundTint="@color/colorBotaoCadastrar"
            android:textColorHint="@color/colorBotaoCadastrar"
            app:passwordToggleTint="@color/colorBotaoCadastrar">

            <EditText
                android:id="@+id/recebe_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:inputType="textPassword"
                android:textColor="@color/colorBotaoCadastrar"
                android:textSize="20sp"
                android:hint="@string/passwordAluno"
                android:textColorHint="@color/colorBotaoCadastrar"
                android:backgroundTint="@color/colorBotaoCadastrar"
                android:textCursorDrawable="@drawable/my_cursor" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_atualiza_aluno"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="@string/AtlualizarAluno"
            android:textColor="@color/colorBotaoCadastrar"
            android:background="@android:color/transparent" />

    </LinearLayout>

</LinearLayout>