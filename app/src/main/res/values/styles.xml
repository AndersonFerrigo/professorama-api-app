<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- StatusBar transparent -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Customize CalendarView -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorIndigo700Background</item>

    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorBotaoCadastrar</item>

    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorBotaoCadastrar</item>
        <item name="android:fontFamily">@fonts/lobster_regular.ttf</item>

    </style>

    <style name="CustomDialogFragment" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/drawable_background_login</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBotaoCadastrar</item>
        <item name="android:subtitle">@color/colorBotaoCadastrar</item>
        <item name="android:itemTextAppearance">@color/colorBotaoCadastrar</item>

    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/colorBotaoCadastrar</item>
        <item name="colorControlNormal">@color/colorBotaoCadastrar</item>
        <item name="colorControlActivated">@color/colorBotaoCadastrar</item>
        <item name="colorControlHighlight">@color/colorBotaoCadastrar</item>
    </style>
</resources>
