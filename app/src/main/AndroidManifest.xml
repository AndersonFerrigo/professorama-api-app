<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.clearsys.professorama">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icone_professorama_api"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">


        <activity
            android:name=".splash.ProfessoramaSplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".novoAluno.CadastroNovoAluno"
            android:screenOrientation="portrait" />

        <activity
            android:name=".professor.ProfessorHomeActivity"
            android:parentActivityName=".professor.ProfessorHomeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".aluno.AlunoHomeActivity"
            android:parentActivityName=".aluno.AlunoHomeActivity"
            android:screenOrientation="portrait" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
</manifest>